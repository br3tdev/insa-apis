{
  "compilerOptions": {
    "incremental": true, // Speeds up builds
    // Add these for better type exports
    "composite": true, // Enables project references
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext"], // Add this
    "baseUrl": "./",
    // "rootDir": "./src", // Add this to keep structure clean
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "strict": true,

    // Keep these for type exports
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // Ensure declarations are emitted
    "outDir": "./dist",

    "allowSyntheticDefaultImports": true, // Add this
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "package.json"], // Add this to be explicit
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
